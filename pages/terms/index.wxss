page {
  width: 100%;
  height: 100%;
  background: #f5f5f9;
}

.terms {
  position: relative;
  width: 100%;
  height: 100%;
}

/** 两翼留白 **/
.WingBlank {
  padding: 0rpx 35rpx;
}

/** description **/
.terms .terms-description {
  padding-bottom: 225rpx; 
}

.terms .terms-description text {
  font-size: 14pt;
  line-height: 22pt;
  color: #353535;
}

.terms .terms-description .terms-row {
  padding-bottom: 15rpx;
  display: block;
  text-indent : 14pt;
}

.terms .terms-description .terms-strong {
  text-indent : 0pt;
  color: #e64340;
}

/** operate **/
.terms .terms-operate {
  position: fixed;
  bottom: 0px;
  border-top: 1px solid #ddd;
  background: #fff;
  width: 100%;
}

.terms .terms-operate .WingBlank {
  padding: 20rpx 35rpx;
}

.terms .terms-operate .radio {
  font-size: 12pt;
}
